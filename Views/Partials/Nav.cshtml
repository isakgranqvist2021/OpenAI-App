@using Microsoft.AspNetCore.Http

@{
    var isSignedIn = Context.Session.GetString("Session") is not null;
}


<div class="flex items-center justify-between text-white">
    <div>
        <a href="/" class="hover:underline">OpenAI App</a>
    </div>
    <div class="flex items-center gap-7">
        @if (!isSignedIn)
        {
            <a href="/sign-in" class="hover:underline">
                Sign In
            </a>
            <a class="bg-green-800 px-4 py-2 duration-100 ease-in rounded-md hover:bg-green-700" href="/sign-up">
                Sign Up
            </a>

        }
        else
        {
            <a href="/sign-out" class="bg-red-800 px-4 py-2 duration-100 ease-in rounded-md hover:bg-red-700">
                Sign Out
            </a>
        }

    </div>
</div>
